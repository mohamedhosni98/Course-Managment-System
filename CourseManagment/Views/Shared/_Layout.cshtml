<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CourseManagment</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CourseManagment.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <style>
        .navbar {
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-size: 1.4rem;
            transition: color 0.3s ease;
        }

            .navbar-brand:hover {
                color: #0056b3 !important;
            }

        .nav-link {
            font-weight: 500;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .hover-bg:hover {
            background-color: #e9ecef;
            color: #0056b3 !important;
        }

        .navbar-toggler {
            border: none;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom mb-3 shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard me-2"></i> Course Management
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                      
                      
                        <li class="nav-item">
                            <a class="nav-link text-dark px-3 py-2 rounded hover-bg" asp-area="" asp-controller="department" asp-action="index">
                                <i class="bi bi-building me-1"></i> Department
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark px-3 py-2 rounded hover-bg" asp-area="" asp-controller="instructor" asp-action="index">
                                <i class="bi bi-person-badge me-1"></i> Instructor
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark px-3 py-2 rounded hover-bg" asp-area="" asp-controller="course" asp-action="index">
                                <i class="bi bi-book me-1"></i> Courses
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark px-3 py-2 rounded hover-bg" asp-area="" asp-controller="student" asp-action="index">
                                <i class="bi bi-people me-1"></i> Student
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CourseManagment - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Styles", required: false)

</body>
</html>
