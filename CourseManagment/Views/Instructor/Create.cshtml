@using CourseManagment.ViewModel.InstructorVM
@model InstructorAddViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h1 class="mb-4 text-center text-primary fw-bold">Create New Instructor</h1>

            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3 text-center"></div>

                        <!-- حقل الاسم -->
                        <div class="form-group mb-4 position-relative">
                            <label asp-for="Name" class="control-label fw-bold text-primary"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="fas fa-user text-primary"></i></span>
                                <input asp-for="Name" class="form-control border-start-0" placeholder="Enter instructor name" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- حقل العنوان -->
                        <div class="form-group mb-4 position-relative">
                            <label asp-for="Address" class="control-label fw-bold text-primary"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="fas fa-map-marker-alt text-primary"></i></span>
                                <input asp-for="Address" class="form-control border-start-0" placeholder="Enter instructor address" />
                            </div>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <!-- حقل الراتب -->
                        <div class="form-group mb-4 position-relative">
                            <label asp-for="Salary" class="control-label fw-bold text-primary"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="fas fa-dollar-sign text-primary"></i></span>
                                <input asp-for="Salary" class="form-control border-start-0" placeholder="Enter salary" />
                            </div>
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>

                        <!-- حقل الصورة -->
                        <div class="form-group mb-4">
                            <label asp-for="ImageFile" class="control-label fw-bold text-primary"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="fas fa-image text-primary"></i></span>
                                <input type="file" asp-for="ImageFile" class="form-control border-start-0" accept=".jpg,.jpeg,.png" />
                            </div>
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <!-- حقل القسم -->
                        <div class="form-group mb-4 position-relative">
                            <label asp-for="DepartmentId" class="control-label fw-bold text-primary"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="fas fa-building text-primary"></i></span>
                                <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-control border-start-0">
                                    <option value="">--Select Department--</option>
                                </select>
                            </div>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>

                        <!-- الأزرار -->
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg me-2 shadow-sm">
                                <i class="fas fa-plus-circle me-2"></i>Create
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- إضافة FontAwesome للأيقونات -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    body {
        background-color: #f8f9fa; /* خلفية فاتحة للصفحة */
    }

    .card {
        border-radius: 15px;
        background: linear-gradient(145deg, #ffffff, #f1f3f5); /* خلفية متدرجة خفيفة */
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px); /* رفع بسيط عند الـ hover */
        }

    .card-body {
        padding: 2rem;
    }

    .form-control, .input-group-text {
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #28a745; /* لون أخضر عشان يتناسق مع زر Create */
            box-shadow: 0 0 8px rgba(40, 167, 69, 0.2);
        }

    .input-group-text {
        background-color: #e9ecef;
    }

    .btn-success, .btn-secondary {
        padding: 12px 25px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-success {
        background: linear-gradient(90deg, #28a745, #218838); /* تدرج لون أخضر */
    }

    .btn-secondary {
        background: linear-gradient(90deg, #6c757d, #5a6268); /* تدرج لون رمادي */
    }

        .btn-success:hover, .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

    .text-danger {
        font-size: 0.875em;
        margin-top: 5px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}