@model IEnumerable<CourseManagment.ViewModel.CourseVM.CourseIndexViewModel>

@{
    ViewData["Title"] = "Index";
}



<div class="container-fluid py-5" style="background: linear-gradient(135deg, #f5f7fa 0%, #e4e7eb 100%); min-height: 100vh; position: relative; overflow: hidden;">
    <div class="container">
        <h1 class="mb-5 text-center text-dark fw-bold" style="font-size: 2.8rem; text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);">Courses List</h1>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @if (!Model.Any())
            {
                <div class="col-12">
                    <div class="alert alert-info d-flex align-items-center justify-content-center gap-2 mb-4 shadow-sm rounded-3" role="alert">
                        <i class="fas fa-info-circle fa-2x text-primary"></i>
                        <span class="fs-5">لا توجد كورسات متاحة حاليًا</span>
                    </div>
                </div>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-lg border-0 rounded-3" style="background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%); transition: all 0.3s ease;">
                            <div class="card-body p-4 text-center">
                                <div class="mb-3">
                                    <i class="fas fa-book fa-3x text-primary"></i>
                                </div>
                                <h5 class="card-title fw-bold text-primary mb-2" style="font-size: 1.5rem;">@Html.DisplayFor(modelItem => item.Name)</h5>
                                <p class="card-text text-muted">
                                    <strong>ID:</strong> @Html.DisplayFor(modelItem => item.Id)<br />
                                    <strong>Degree:</strong> @Html.DisplayFor(modelItem => item.Degree)<br />
                                    <strong>Min Degree:</strong> @Html.DisplayFor(modelItem => item.MinDegree)<br />
                                    <strong>Department ID:</strong> @Html.DisplayFor(modelItem => item.DepartmentId)<br />
                                    <strong>Department:</strong> @Html.DisplayFor(modelItem => item.DepartmentName)
                                </p>
                            </div>
                            <div class="card-footer bg-transparent border-0 d-flex justify-content-center gap-2 py-3">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary rounded-pill px-3">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info rounded-pill px-3">
                                    <i class="fas fa-info-circle me-1"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-pill px-3"
                                   onclick="return confirm('هل أنت متأكد من حذف الكورس؟');">
                                    <i class="fas fa-trash me-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <div class="mt-5 text-center">
            <a class="btn btn-success btn-lg rounded-pill px-5 create-btn" asp-action="Create">
                <i class="fas fa-plus-circle me-2"></i> Create New Course
            </a>
        </div>
    </div>
    <!-- إضافة لمسة خلفية ديناميكية -->
    <div class="position-absolute top-50 start-50 translate-middle" style="width: 400px; height: 400px; background: radial-gradient(circle, rgba(78, 115, 223, 0.1) 0%, rgba(255, 255, 255, 0) 70%); z-index: -1;"></div>
</div>

<!-- إضافة FontAwesome للأيقونات -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #e4e7eb 100%);
    }
    .card {
        border: none;
    }
    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
    .btn-primary, .btn-info, .btn-danger, .btn-success {
        transition: all 0.3s ease;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        transform: scale(1.1);
    }
    .btn-info:hover {
        background-color: #138496;
        transform: scale(1.1);
    }
    .btn-danger:hover {
        background-color: #c82333;
        transform: scale(1.1);
    }
    .btn-success:hover {
        background-color: #218838;
        transform: scale(1.1);
    }
    .create-btn {
        transition: all 0.3s ease;
    }
    .create-btn:hover {
        background-color: #218838;
        transform: scale(1.1);
    }
    .card-text strong {
        color: #343a40;
    }
    .alert-info {
        border: none;
        background: #e7f1ff;
        color: #0d6efd;
    }
</style>