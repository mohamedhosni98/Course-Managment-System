@model CourseManagment.ViewModel.CourseVM.CourseDetailsViewModel

@{
    ViewData["Title"] = "Details";
}



<div class="container modern-container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-9">
            <div class="card modern-card animate__animated animate__zoomIn">
                <div class="card-header modern-header">
                    <h4><i class="fas fa-book-open me-1"></i>@Model.Name</h4>
                </div>
                <div class="card-body">
                    <div class="modern-details">
                        <div class="detail-item">
                            <span class="detail-label">@Html.DisplayNameFor(model => model.Name):</span>
                            <span class="detail-value">@Html.DisplayFor(model => model.Name)</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">@Html.DisplayNameFor(model => model.Degree):</span>
                            <span class="detail-value">@Html.DisplayFor(model => model.Degree)</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">@Html.DisplayNameFor(model => model.MinDegree):</span>
                            <span class="detail-value">@Html.DisplayFor(model => model.MinDegree)</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">@Html.DisplayNameFor(model => model.Description):</span>
                            <span class="detail-value">@(Model.Description ?? "No description")</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">@Html.DisplayNameFor(model => model.DepartmentName):</span>
                            <span class="detail-value">@(Model.DepartmentName ?? "No department")</span>
                        </div>
                    </div>

                    <div class="modern-sections">
                        <div class="section">
                            <div class="section-title"><i class="fas fa-chalkboard-teacher me-1"></i>Instructors</div>
                            @if (Model.InstructorName.Any())
                            {
                                <ul class="modern-list">
                                    @foreach (var instructor in Model.InstructorName.Take(3))
                                    {
                                        <li class="animate__animated animate__fadeInLeft">@instructor</li>
                                    }
                                    @if (Model.InstructorName.Count > 3)
                                    {
                                        <li class="text-muted small">+@(Model.InstructorName.Count - 3) more</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted small">No instructors</p>
                            }
                        </div>

                        <div class="section">
                            <div class="section-title"><i class="fas fa-users me-1"></i>Students</div>
                            @if (Model.Students.Any())
                            {
                                <ul class="modern-list">
                                    @foreach (var student in Model.Students.Take(3))
                                    {
                                        <li class="animate__animated animate__fadeInLeft">@student</li>
                                    }
                                    @if (Model.Students.Count > 3)
                                    {
                                        <li class="text-muted small">+@(Model.Students.Count - 3) more</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted small">No students</p>
                            }
                        </div>

                        <div class="section">
                            <div class="section-title"><i class="fas fa-clipboard-list me-1"></i>Grades</div>
                            @if (Model.studentWithGrades.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table modern-table">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Grade</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var student in Model.studentWithGrades.Take(3))
                                            {
                                                <tr class="animate__animated animate__fadeInLeft">
                                                    <td>@(student.StudentName ?? "Unknown")</td>
                                                    <td>@student.Grade</td>
                                                </tr>
                                            }
                                            @if (Model.studentWithGrades.Count > 3)
                                            {
                                                <tr>
                                                    <td colspan="2" class="text-muted small text-center">+@(Model.studentWithGrades.Count - 3) more</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted small">No grades</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn modern-btn"><i class="fas fa-arrow-left me-1"></i>Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" integrity="sha512-c42qTSw/wPZ3/5LBzD+Bw5f7bSF2oxou6wEb+I/lqeaKV5FDIfMvvRp772y4jcJLKuGUOpbJMdg/BTl50fJYAw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .modern-container {
            padding: 0.8rem 0;
            max-width: 1200px;
            margin: 0 auto;
        }

        .modern-card {
            border-radius: 12px;
            border: none;
            background: linear-gradient(145deg, #ffffff, #f1f5f9);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
        }

        .modern-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15), 0 0 8px rgba(59, 130, 246, 0.4);
        }

        .modern-header {
            background: linear-gradient(45deg, #3b82f6, #ec4899);
            color: white;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
            padding: 0.6rem;
            text-align: center;
            font-size: 1.1rem;
            position: relative;
            overflow: hidden;
        }

        .modern-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: 0.5s;
        }

        .modern-header:hover::before {
            left: 100%;
        }

        .card-body {
            padding: 0.8rem;
        }

        .modern-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 0.3rem;
            margin-bottom: 0.6rem;
        }

        .detail-item {
            display: flex;
            flex-direction: column;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(6px);
            border-radius: 6px;
            padding: 0.4rem;
            font-size: 0.8rem;
        }

        .detail-label {
            font-weight: 600;
            color: #1e3a8a;
            margin-bottom: 0.2rem;
        }

        .detail-value {
            color: #374151;
        }

        .modern-sections {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 0.6rem;
        }

        .section {
            display: flex;
            flex-direction: column;
        }

        .section-title {
            font-size: 0.85rem;
            font-weight: 600;
            color: #3b82f6;
            margin-bottom: 0.3rem;
            display: flex;
            align-items: center;
        }

        .modern-list {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(6px);
            border-radius: 6px;
            padding: 0.3rem;
            max-height: 80px;
            overflow: hidden;
            flex-grow: 1;
        }

        .modern-list li {
            padding: 0.2rem 0.5rem;
            font-size: 0.75rem;
            border-radius: 4px;
            transition: background-color 0.2s ease;
        }

        .modern-list li:hover {
            background: rgba(59, 130, 246, 0.1);
        }

        .modern-table {
            border-radius: 6px;
            overflow: hidden;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
            flex-grow: 1;
        }

        .modern-table th,
        .modern-table td {
            padding: 0.3rem;
            font-size: 0.75rem;
            vertical-align: middle;
        }

        .modern-table thead {
            background: linear-gradient(45deg, #3b82f6, #ec4899);
            color: white;
        }

        .modern-table tbody tr {
            background: rgba(255, 255, 255, 0.9);
            transition: background-color 0.2s ease;
        }

        .modern-table tbody tr:hover {
            background: rgba(59, 130, 246, 0.1);
        }

        .text-muted {
            font-size: 0.7rem;
            color: #6b7280;
        }

        .modern-btn {
            padding: 0.3rem 0.8rem;
            font-size: 0.8rem;
            border-radius: 20px;
            border: none;
            background: linear-gradient(45deg, #3b82f6, #ec4899);
            color: white;
            transition: all 0.3s ease;
            box-shadow: 0 3px 10px rgba(59, 130, 246, 0.3);
        }

        .modern-btn:hover {
            background: linear-gradient(45deg, #ec4899, #3b82f6);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(236, 72, 153, 0.4);
        }

        .modern-btn i {
            transition: transform 0.3s ease;
        }

        .modern-btn:hover i {
            transform: translateX(-3px);
        }

        /* Media Queries for Responsive Design */
        media only screen and (max-width: 576px) {
            .modern-container {
                padding: 0.5rem 0;
            }

            .modern-card {
                margin: 0 0.3rem;
            }

            .card-body {
                padding: 0.6rem;
            }

            .modern-details {
                grid-template-columns: 1fr;
                gap: 0.2rem;
            }

            .modern-sections {
                grid-template-columns: 1fr;
                gap: 0.4rem;
            }

            .detail-item {
                font-size: 0.75rem;
                padding: 0.3rem;
            }

            .section-title {
                font-size: 0.8rem;
            }

            .modern-btn {
                padding: 0.2rem 0.6rem;
                font-size: 0.75rem;
            }

            .modern-table th,
            .modern-table td {
                font-size: 0.7rem;
                padding: 0.2rem;
            }

            .modern-list li {
                font-size: 0.7rem;
                padding: 0.2rem 0.4rem;
            }
        }
    </style>
}